<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Bounded Context entry point -->
        <service id="gmorel.state_workflow_bundle.specification.service" class="Gmorel\StateWorkflowBundle\SpecificationGeneration\App\SpecificationService" public="true">
            <argument type="service" id="gmorel.state_workflow_bundle.workflow.container" />
            <argument type="service" id="gmorel.state_workflow_bundle.cytoscape_specification_representation.generator" />
        </service>

        <!-- CLI -->
        <service id="gmorel.state_workflow_bundle.generate_workflow_specifications.cli" class="Gmorel\StateWorkflowBundle\SpecificationGeneration\UI\Cli\GenerateWorkflowSpecificationsCommand" public="true">
            <argument type="service" id="gmorel.state_workflow_bundle.specification.service" />
            <tag name="console.command" />
        </service>

        <service id="gmorel.state_workflow_bundle.cytoscape_specification_representation.generator" class="Gmorel\StateWorkflowBundle\SpecificationGeneration\Infra\CytoscapeSpecificationRepresentationGenerator" public="false">
        </service>

        <service id="gmorel.state_workflow_bundle.workflow.container" class="Gmorel\StateWorkflowBundle\SpecificationGeneration\Domain\WorkflowContainer" public="false">
        </service>

    </services>
</container>
